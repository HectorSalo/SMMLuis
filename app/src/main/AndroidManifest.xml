<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.example.seamosmejoresmaestros">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SustituirActivity"
            android:theme="@style/Theme.Editar"
            android:label="@string/title_activity_sustituir"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResumenSalas"
            android:label="@string/title_activity_resumen"
            android:theme="@style/Theme.Editar" />
        <activity
            android:name=".EditarSalas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddPublicador"
            android:label="@string/title_activity_agregar"
            android:theme="@style/Theme.Dialog.Publicador" />
        <activity
            android:name=".EditarPubActivity"
            android:label="@string/title_activity_editar"
            android:theme="@style/Theme.Editar" />
        <activity
            android:name=".VerActivity"
            android:label="@string/title_activity_ver"
            android:theme="@style/Base.Theme.MaterialComponents.Light.Dialog.FixedSize" />
        <activity
            android:name=".PublicadoresActivity"
            android:label="@string/title_activity_publicadores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AsignacionesActivity"
            android:label="@string/title_activity_asignaciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>