<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progressBarAsignaciones"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="64dp"
                />

            <LinearLayout
                android:id="@+id/layoutSala1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/titleAsignaciones"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvLecturaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/texto_vacio"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEventosPubsLectura"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvEventosAsignacion1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/texto_vacio"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEventosPubsAsignacion1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvEventosPubsAsignacionAyu1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tvEventosAsignacion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/texto_vacio"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tvEventosPubsAsignacion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvEventosPubsAsignacionAyu2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tvEventosAsignacion3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/texto_vacio"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tvEventosPubsAsignacion3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tvEventosPubsAsignacionAyu3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/texto_vacio"
                    android:gravity="center"
                    android:textSize="22sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarUltSem"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_below="@id/layoutSala1"
                />

            <LinearLayout
                android:id="@+id/layoutUltSem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layoutSala1"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:text="@string/ultSemana"
                    android:textColor="#fff"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvInicioUltSemana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/texto_vacio"
                    android:textSize="22sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarVisita"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_below="@id/layoutUltSem"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_below="@id/layoutUltSem">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:text="@string/proxVisita"
                android:textColor="#fff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvInicioVisita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/texto_vacio"
                android:textSize="22sp" />
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>